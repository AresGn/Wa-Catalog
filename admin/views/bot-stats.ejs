<div class="bot-stats">
  <div class="stats-header">
    <h1><i class="fas fa-robot"></i> Bot Analytics</h1>
    <p class="subtitle">WhatsApp Catalog Bot Performance & Usage Statistics</p>
  </div>

  <!-- Overview Stats -->
  <div class="stats-grid">
    <div class="stat-card stat-primary">
      <div class="stat-header">
        <h3>Total Users</h3>
        <i class="fas fa-users"></i>
      </div>
      <p class="stat-value"><%= botStats.totalUsers || 0 %></p>
      <p class="stat-sub"><%= botStats.activeToday || 0 %> active today</p>
    </div>

    <div class="stat-card stat-success">
      <div class="stat-header">
        <h3>Total Searches</h3>
        <i class="fas fa-search"></i>
      </div>
      <p class="stat-value"><%= botStats.totalSearches || 0 %></p>
      <p class="stat-sub"><%= botStats.searchesToday || 0 %> today</p>
    </div>

    <div class="stat-card stat-info">
      <div class="stat-header">
        <h3>Link Clicks</h3>
        <i class="fas fa-mouse"></i>
      </div>
      <p class="stat-value"><%= botStats.totalClicks || 0 %></p>
      <p class="stat-sub">Avg <span class="highlight"><%= botStats.avgResponseTime || 0 %>ms</span> response</p>
    </div>

    <div class="stat-card stat-warning">
      <div class="stat-header">
        <h3>Conversion Rate</h3>
        <i class="fas fa-chart-pie"></i>
      </div>
      <p class="stat-value"><%= (botStats.conversionRate || 0).toFixed(1) %>%</p>
      <p class="stat-sub">Search to Contact</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="bot-content">
    <!-- Top Searches -->
    <div class="content-box">
      <h2><i class="fas fa-fire"></i> Top Search Keywords</h2>
      <% if (botStats.topSearches && Object.keys(botStats.topSearches).length > 0) { %>
        <div class="list-items">
          <% Object.entries(botStats.topSearches).sort((a, b) => b[1] - a[1]).slice(0, 10).forEach((item, idx) => { %>
            <div class="list-item">
              <div class="list-rank"><%= idx + 1 %></div>
              <div class="list-content">
                <span class="list-title"><%= item[0] %></span>
                <span class="list-meta"><%= item[1] %> searches</span>
              </div>
              <div class="list-bar">
                <div class="progress-bar" style="width: <%= (item[1] / Math.max(...Object.values(botStats.topSearches))) * 100 %>%"></div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <p class="empty-message">No search data available yet</p>
      <% } %>
    </div>

    <!-- Top Vendors -->
    <div class="content-box">
      <h2><i class="fas fa-star"></i> Top Vendors (Most Viewed)</h2>
      <% if (botStats.topVendors && botStats.topVendors.length > 0) { %>
        <div class="vendor-list">
          <% botStats.topVendors.slice(0, 8).forEach((vendor, idx) => { %>
            <div class="vendor-item">
              <div class="vendor-rank"><%= idx + 1 %></div>
              <div class="vendor-info">
                <h4><%= vendor.name %></h4>
                <p><i class="fas fa-map-marker-alt"></i> <%= vendor.city %></p>
              </div>
              <div class="vendor-stats">
                <div class="vendor-stat">
                  <span class="stat-label">Views</span>
                  <span class="stat-number"><%= vendor.views || 0 %></span>
                </div>
                <div class="vendor-stat">
                  <span class="stat-label">Clicks</span>
                  <span class="stat-number"><%= vendor.clicks || 0 %></span>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <p class="empty-message">No vendor data available yet</p>
      <% } %>
    </div>
  </div>

  <!-- Daily Activity -->
  <div class="bot-content">
    <div class="content-box full-width">
      <h2><i class="fas fa-chart-line"></i> Daily Activity (Last 7 Days)</h2>
      <% if (botStats.dailyActivity && botStats.dailyActivity.length > 0) { %>
        <div class="chart-container">
          <div class="mini-chart">
            <% botStats.dailyActivity.forEach((day) => { %>
              <div class="chart-bar-group">
                <div class="chart-bar searches" style="height: <%= (day.searches / Math.max(...botStats.dailyActivity.map(d => d.searches))) * 100 %>%">
                  <span class="tooltip"><%= day.searches %> searches</span>
                </div>
                <div class="chart-bar clicks" style="height: <%= (day.clicks / Math.max(...botStats.dailyActivity.map(d => d.clicks))) * 100 %>%">
                  <span class="tooltip"><%= day.clicks %> clicks</span>
                </div>
                <div class="chart-bar users" style="height: <%= (day.users / Math.max(...botStats.dailyActivity.map(d => d.users))) * 100 %>%">
                  <span class="tooltip"><%= day.users %> users</span>
                </div>
              </div>
            <% }); %>
          </div>
          <div class="chart-legend">
            <span class="legend-item searches"><i class="fas fa-circle"></i> Searches</span>
            <span class="legend-item clicks"><i class="fas fa-circle"></i> Clicks</span>
            <span class="legend-item users"><i class="fas fa-circle"></i> Users</span>
          </div>
        </div>
      <% } else { %>
        <p class="empty-message">No activity data available yet</p>
      <% } %>
    </div>
  </div>

  <!-- Detailed Metrics -->
  <div class="bot-content">
    <div class="metrics-grid">
      <div class="metric-box">
        <h3>Performance Metrics</h3>
        <div class="metric-items">
          <div class="metric-row">
            <span>Avg Response Time</span>
            <strong><%= botStats.avgResponseTime || 0 %>ms</strong>
          </div>
          <div class="metric-row">
            <span>Max Response Time</span>
            <strong><%= botStats.maxResponseTime || 0 %>ms</strong>
          </div>
          <div class="metric-row">
            <span>Success Rate</span>
            <strong><%= (botStats.successRate || 0).toFixed(1) %>%</strong>
          </div>
          <div class="metric-row">
            <span>Error Rate</span>
            <strong><%= (botStats.errorRate || 0).toFixed(1) %>%</strong>
          </div>
        </div>
      </div>

      <div class="metric-box">
        <h3>User Engagement</h3>
        <div class="metric-items">
          <div class="metric-row">
            <span>Avg Searches/User</span>
            <strong><%= (botStats.avgSearchesPerUser || 0).toFixed(1) %></strong>
          </div>
          <div class="metric-row">
            <span>Avg Clicks/User</span>
            <strong><%= (botStats.avgClicksPerUser || 0).toFixed(1) %></strong>
          </div>
          <div class="metric-row">
            <span>Return Rate</span>
            <strong><%= (botStats.returnRate || 0).toFixed(1) %>%</strong>
          </div>
          <div class="metric-row">
            <span>Session Duration</span>
            <strong><%= botStats.avgSessionDuration || 0 %>s</strong>
          </div>
        </div>
      </div>

      <div class="metric-box">
        <h3>Search Categories</h3>
        <div class="metric-items">
          <div class="metric-row">
            <span>Product Searches</span>
            <strong><%= botStats.productSearches || 0 %></strong>
          </div>
          <div class="metric-row">
            <span>Vendor Searches</span>
            <strong><%= botStats.vendorSearches || 0 %></strong>
          </div>
          <div class="metric-row">
            <span>Help Requests</span>
            <strong><%= botStats.helpRequests || 0 %></strong>
          </div>
          <div class="metric-row">
            <span>Other Queries</span>
            <strong><%= botStats.otherQueries || 0 %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Messages -->
  <div class="bot-content">
    <div class="content-box full-width">
      <h2><i class="fas fa-comments"></i> Recent User Searches</h2>
      <% if (botStats.recentSearches && botStats.recentSearches.length > 0) { %>
        <div class="recent-list">
          <% botStats.recentSearches.slice(0, 15).forEach((search) => { %>
            <div class="recent-item">
              <div class="recent-time">
                <i class="fas fa-clock"></i>
                <span><%= new Date(search.timestamp).toLocaleString() %></span>
              </div>
              <div class="recent-query">
                <strong><%= search.query %></strong>
                <% if (search.results) { %>
                  <span class="result-badge"><%= search.results %> results</span>
                <% } %>
              </div>
              <div class="recent-user">
                <i class="fas fa-phone"></i>
                <span><%= search.userPhone %></span>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <p class="empty-message">No search history available</p>
      <% } %>
    </div>
  </div>
</div>

