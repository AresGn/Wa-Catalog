<div class="form-container">
  <h1><%= title %></h1>

  <form id="vendorForm" method="POST" class="form">
    <div class="form-group">
      <label for="name">Vendor Name *</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        value="<%= vendor?.name || '' %>" 
        placeholder="TechShop229"
        required
      >
    </div>

    <div class="form-group">
      <label for="whatsappNumber">WhatsApp Number *</label>
      <input 
        type="tel" 
        id="whatsappNumber" 
        name="whatsappNumber" 
        value="<%= vendor?.whatsapp_number || '' %>" 
        placeholder="+22997000000"
        required
      >
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="city">City *</label>
        <input 
          type="text" 
          id="city" 
          name="city" 
          value="<%= vendor?.city || '' %>" 
          placeholder="Cotonou"
          required
        >
      </div>

      <div class="form-group">
        <label for="category">Category *</label>
        <input 
          type="text" 
          id="category" 
          name="category" 
          value="<%= vendor?.category?.join(', ') || '' %>" 
          placeholder="Électronique, Téléphones"
          required
        >
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="status">Status</label>
        <select id="status" name="status">
          <option value="active" <%= vendor?.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="inactive" <%= vendor?.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>

      <div class="form-group">
        <label for="verified">
          <input type="checkbox" id="verified" name="verified" <%= vendor?.verified ? 'checked' : '' %>>
          Verified
        </label>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save Vendor</button>
      <a href="/vendors" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>

<script>
document.getElementById('vendorForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const data = Object.fromEntries(formData);
  
  data.category = data.category.split(',').map(c => c.trim()).filter(c => c);
  data.verified = formData.has('verified');
  
  const method = '<%= vendor?.id ? "PUT" : "POST" %>';
  const url = '<%= vendor?.id ? `/api/vendors/${vendor.id}` : "/api/vendors" %>';

  try {
    const res = await fetch(url, {
      method,
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    });

    if (res.ok) {
      alert('Vendor saved successfully!');
      window.location.href = '/vendors';
    } else {
      alert('Error saving vendor: ' + (await res.json()).error);
    }
  } catch (err) {
    alert('Error: ' + err.message);
  }
});
</script>
